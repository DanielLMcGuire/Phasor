pkgname=phasor
pkgver=1.1.0
pkgrel=1
pkgdesc="Phasor Programming Language Toolchain"
arch=('x86_64')
url="https://github.com/DanielLMcGuire/Phasor"
license=('MIT')
makedepends=('gcc' 'cmake' 'ninja')
depends=()
source=("https://github.com/DanielLMcGuire/Phasor/archive/refs/tags/2.1.0.tar.gz")
sha256sums=('84F4CAD864C35F42A54540CA9FDB36E702CE072CD030265798AF88B8C8F48668')

build() {
    cd "$srcdir/Phasor-2.1.0"
    cmake -S . -B build -G Ninja
    cmake --build build
}

package() {
    cd "$srcdir/Phasor-2.1.0/build"
    cmake --install . --prefix "$pkgdir"
    for section in 1 3 5 7; do
        src="$srcdir/Phasor-2.1.0/docs/man/man$section"
        dest="$pkgdir/usr/share/man/man$section"
        mkdir -p "$dest"
        for file in "$src"/*."$section"; do
            [ -f "$file" ] && install -Dm644 "$file" "$dest"/
        done
    done
}

include_stdio();
include_stdfile();
include_stdsys();

fn main() {
    var argc = sys_argc();
    if (argc < 3) {
        putf("Usage: %s SOURCE DEST", sys_argv(0)); puts("");
        puts("Copy SOURCE to DEST.");
        puts("");
        puts("-f, --overwrite          overwrite destination if it exists");
        return 0;    
    }

    var ow = false;
    var i = 1;
    
    for (i = 1; i < argc; i = i + 1) {
        var arg = sys_argv(i);
        if (arg == "-f" || arg == "--overwrite") {
            ow = true;
            break;
        }
    }

    var src = sys_argv(1);
    var dest = sys_argv(2);

    if (fcp(src, dest, ow) == null)
        return 0;
    else 
        return 1;
}

shutdown(main());